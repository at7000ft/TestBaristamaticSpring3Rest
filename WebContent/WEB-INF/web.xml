   <!-- </filter> -->
   <!-- <filter-mapping> -->
   <!-- <filter-name>UrlRewriteFilter</filter-name> -->
   <!-- <url-pattern>/*</url-pattern> -->
   <!-- </filter-mapping> -->


   <error-page>
      <error-code>404</error-code>
      <location>/WEB-INF/jsp/error.jsp</location>
   </error-page>

</web-app>